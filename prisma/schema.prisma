generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model field {
  code      String  @id
  name      String
  location  String
  fieldSize String
  category  String
  crop      crop[]
  staff     staff[]
}

model crop {
  cropCode  String @id
  name      String
  category  String
  status    String
  season    String
  field     field  @relation(fields: [fieldCode], references: [code], onUpdate: Cascade, onDelete: Cascade)
  fieldCode String
}
model staff {
  id          String @id
  name        String
  Designation String
  gender      String
  dob         String
  contact     String
  role        String
  field       field  @relation(fields: [fieldCode], references: [code])
  fieldCode   String
}
